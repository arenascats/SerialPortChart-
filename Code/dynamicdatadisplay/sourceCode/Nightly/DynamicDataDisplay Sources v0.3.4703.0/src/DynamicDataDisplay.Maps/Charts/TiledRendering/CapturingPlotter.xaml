<d3:Plotter2D x:Class="Microsoft.Research.DynamicDataDisplay.Maps.Charts.CapturingPlotter"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    >
	<d3:Plotter2D.Template>
		<ControlTemplate>
			<Grid Name="PART_ContentsGrid" Background="Transparent" DataContext="{TemplateBinding DataContext}">
				<Grid Name="PART_MainGrid"/>
				<Grid Name="PART_CentralGrid" ClipToBounds="True"/>
				<Canvas Name="PART_MainCanvas" ClipToBounds="True"/>
			</Grid>
		</ControlTemplate>
	</d3:Plotter2D.Template>
</d3:Plotter2D>
