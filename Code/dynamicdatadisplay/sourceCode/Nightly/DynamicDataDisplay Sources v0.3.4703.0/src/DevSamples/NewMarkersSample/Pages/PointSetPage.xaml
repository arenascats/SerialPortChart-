<Page x:Class="NewMarkersSample.Pages.PointSetPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="PointSetPage">
	<Grid>
		<d3:ChartPlotter Name="plotter" Loaded="plotter_Loaded">
			<d3:DevMarkerChart Name="chart">
				<d3:RectangleMarker MarkerWidth="5" MarkerHeight="5"/>
			</d3:DevMarkerChart>
			
			<d3:DevMarkerChart Name="chart2">
				<d3:RectangleMarker MarkerFill="Orange" MarkerWidth="7" MarkerHeight="7"/>
			</d3:DevMarkerChart>
			
			<Button Name="timerControlBtn" Content="Stop timer" Click="timerControlBtn_Click"/>
		</d3:ChartPlotter>
	</Grid>
</Page>
