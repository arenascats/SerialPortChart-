<UserControl x:Class="DynamicDataDisplay.Markers.ForestDisplayControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
			 xmlns:local="clr-namespace:DynamicDataDisplay.Markers"
			 xmlns:local2="clr-namespace:Microsoft.Research.DynamicDataDisplay.Charts.Markers">
	<Grid>
		<d3:ChartPlotter Name="plotter">
			<local2:DevMarkerChart x:Name="markerChart" BoundsUnionMode="Bounds" ItemsSource="{Binding}">
				<local:ForestDisplayGenerator x:Name="forestDisplayGenerator" />
			</local2:DevMarkerChart>

			<d3:HorizontalScrollBar/>
		</d3:ChartPlotter>
	</Grid>
</UserControl>
