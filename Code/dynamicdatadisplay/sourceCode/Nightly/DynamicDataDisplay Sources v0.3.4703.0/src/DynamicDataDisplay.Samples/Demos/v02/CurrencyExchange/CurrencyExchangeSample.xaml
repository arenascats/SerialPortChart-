<Page x:Class="Microsoft.Research.DynamicDataDisplay.Samples.Demos.v02.CurrencyExchange.CurrencyExchangeSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:d3="http://research.microsoft.com/DynamicDataDisplay/1.0"
    Title="CurrencyExchangeSample">
    <Grid>
		<d3:ChartPlotter Name="plotter">
			<d3:ChartPlotter.MainHorizontalAxis>
				<d3:HorizontalDateTimeAxis Name="dateAxis"/>
			</d3:ChartPlotter.MainHorizontalAxis>

			<d3:Header FontFamily="Georgia" Content="Currencies exchange rate"/>
			<d3:VerticalAxisTitle FontFamily="Georgia" Content="Currency price, in RUB"/>
			<d3:HorizontalAxisTitle FontFamily="Georgia" Content="Date"/>
		</d3:ChartPlotter>
	</Grid>
</Page>
